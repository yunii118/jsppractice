				loginForm.action='/book/register.jsp';
				loginForm.submit();
			})
		}
		if(document.querySelector("#logoutBtn")!=null){
			let logoutBtn = document.querySelector("#logoutBtn");
			
			logoutBtn.addEventListener('click', function(){
				loginForm.action='/bookLogout';
