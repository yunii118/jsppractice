	function goPage(num){
		searchForm.pageNo.value=num;
		searchForm.submit();
	}
	
	function goDetail(num){
		searchForm.no.value=num;
		searchForm.action='/bookRead';
		searchForm.submit();
		
		
	}
	

</script>
